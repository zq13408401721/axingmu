<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".fragment.Neighborhood_Fragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/neighbor_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">

        <TextView
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_171"
            android:text="@string/neighbor" />

        <CheckBox
            android:id="@+id/address_secrecy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_109"
            android:background="@drawable/neigbor_cb_select"
            android:button="@null" />

        <ImageView
            android:id="@+id/address_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/jia" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/neighbor_relativelayout"
       android:layout_below="@id/neighbor_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <RelativeLayout
            android:id="@+id/neighbor_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="42dp">

            <ImageView
                android:id="@+id/neighbor_address_img"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@mipmap/tongxunlu" />

            <TextView
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_65"
                android:layout_marginTop="@dimen/dp_13"
                android:text="@string/address" />

            <ImageView
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_11"
                android:layout_marginLeft="@dimen/dp_354"
                android:layout_marginTop="@dimen/dp_13"
                android:src="@mipmap/jinru" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_100"
            android:background="@color/grey" />

        <TextView
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_159"
            android:text="@string/message" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/neighbor_rec"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_434"
            android:layout_marginTop="@dimen/dp_184"

            ></android.support.v7.widget.RecyclerView>
    </RelativeLayout>

</RelativeLayout>