<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presenter.acivity.Visitors_acivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toob_fangke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/dp_9"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_34"
            android:src="@mipmap/fanhuhei" />

        <TextView
            android:layout_width="@dimen/dp_71"
            android:layout_height="@dimen/dp_17"
            android:layout_gravity="center"
            android:text="新增访客"
            android:textSize="@dimen/dp_17" />

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/fangke"
        android:layout_width="@dimen/dp_78"
        android:layout_height="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_90"
        android:text="来访者姓名"

        />

    <EditText
        android:layout_width="@dimen/dp_126"
        android:layout_height="@dimen/dp_19"
        android:layout_marginLeft="@dimen/dp_114"
        android:layout_marginTop="@dimen/dp_89"
        android:background="@null"
        android:hint="来访者姓名"
        android:textSize="@dimen/dp_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fangke"
        android:layout_marginTop="@dimen/dp_18" />

    <TextView
        android:id="@+id/dianhua"
        android:layout_width="@dimen/dp_63"
        android:layout_height="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_141"
        android:text="联系电话"

        />

    <EditText
        android:layout_width="@dimen/dp_126"
        android:layout_height="@dimen/dp_19"
        android:layout_marginLeft="@dimen/dp_114"
        android:layout_marginTop="@dimen/dp_140"
        android:background="@null"
        android:hint="请输入联系电话"
        android:textSize="@dimen/dp_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dianhua"
        android:layout_marginTop="@dimen/dp_18" />

    <TextView
        android:id="@+id/shuliang"
        android:layout_width="@dimen/dp_79"
        android:layout_height="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_190"
        android:text="来访者数量"

        />

    <EditText

        android:layout_width="@dimen/dp_166"
        android:layout_height="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_114"
        android:layout_marginTop="@dimen/dp_191"
        android:background="@null"
        android:hint="请输入来访者数量"
        android:textSize="@dimen/dp_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shuliang"
        android:layout_marginTop="@dimen/dp_18" />

    <TextView
        android:id="@+id/tv_fangshi"
        android:layout_width="@dimen/dp_63"
        android:layout_height="@dimen/dp_16"
        android:layout_below="@id/shuliang"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_35"
        android:text="@string/laifang" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shuliang"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_toRightOf="@id/tv_fangshi"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_35"
            android:text="时间段" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:text="次数" />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_fangshi"
        android:layout_marginTop="@dimen/dp_18" />

    <TextView
        android:id="@+id/shiduan"
        android:layout_width="@dimen/dp_63"
        android:layout_height="@dimen/dp_16"
        android:layout_below="@id/tv_fangshi"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_37"
        android:text="来访时段" />

    <LinearLayout
        android:id="@+id/ll_date"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_116"
        android:layout_below="@id/shiduan"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="horizontal">

        <DatePicker
            android:id="@+id/dpPicker"
            android:layout_width="match_parent"
            android:datePickerMode="spinner"
            android:layout_height="match_parent"
            android:calendarViewShown="false" />
        <TextView
            android:id="@+id/dao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@id/shiduan"
            android:layout_toRightOf="@id/ll_date"
            android:text="到"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_date1"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_116"
            android:layout_below="@id/shiduan"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_toRightOf="@id/ll_date"
            android:layout_marginLeft="@dimen/dp_5"
            android:orientation="horizontal">

            <DatePicker
                android:id="@+id/dpPicker1"
                android:layout_width="match_parent"
                android:datePickerMode="spinner"
                android:layout_height="match_parent"
                android:calendarViewShown="false" />
        </LinearLayout>

     <!--   <DatePicker
            android:id="@+id/dpPicker1"
            android:layout_width="@dimen/dp_116"
            android:datePickerMode="spinner"
            android:layout_height="wrap_content"
            android:calendarViewShown="false" />-->



    <TextView
        android:id="@+id/yuanyin"
        android:layout_width="@dimen/dp_62"
        android:layout_height="@dimen/dp_16"
        android:layout_below="@id/ll_date"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_47"
        android:text="来访原因" />

    <EditText
        android:id="@+id/et_cause"
        android:layout_width="@dimen/dp_110"
        android:layout_height="@dimen/dp_16"
        android:layout_below="@id/ll_date"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_48"
        android:layout_toRightOf="@id/yuanyin"
        android:background="@null"
        android:hint="请选择来访原因"
        android:textSize="@dimen/dp_10" />

    <ImageView
        android:layout_width="@dimen/dp_7"
        android:layout_height="@dimen/dp_11"
        android:layout_below="@id/ll_date"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_46"
        android:layout_marginRight="@dimen/dp_11"
        android:layout_toRightOf="@id/et_cause" />

    <View
        android:id="@+id/v_xian"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/yuanyin"
        android:layout_marginTop="@dimen/dp_18" />

    <Button
        android:layout_width="@dimen/dp_311"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@id/v_xian"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_110"
        android:background="@drawable/shop"
        android:text="发出邀请" />

    </RelativeLayout>
</ScrollView>