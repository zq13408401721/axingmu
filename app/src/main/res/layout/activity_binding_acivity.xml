<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presenter.acivity.Binding_acivity">
    <ImageView
        android:layout_width="@dimen/dp_9"
        android:layout_height="@dimen/dp_16"
        android:src="@mipmap/back"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_15"
        />
    <TextView
        android:layout_width="@dimen/dp_123"
        android:layout_height="@dimen/dp_23"
        android:text="@string/shurushoujihao"
        android:layout_marginTop="@dimen/dp_106"
        android:layout_marginLeft="@dimen/dp_56"/>
    <TextView
        android:layout_width="@dimen/dp_194"
        android:layout_height="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_56"
        android:layout_marginTop="@dimen/dp_144"
        android:text="为防止账号丢失请绑定手机号"/>
    <ImageView
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_17"
        android:layout_marginLeft="@dimen/dp_54"
        android:layout_marginTop="@dimen/dp_216"
        android:src="@mipmap/shoujihaoma" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_203"
        android:layout_marginRight="@dimen/dp_48"
        android:gravity="center"
        android:hint="请输入手机号码" />
    <TextView
        android:layout_width="@dimen/dp_73"
        android:layout_height="@dimen/dp_19"
        android:layout_marginTop="@dimen/dp_213"
        android:layout_marginLeft="@dimen/dp_278"
        android:text="获取验证码"
        android:textColor="@color/colorgenn"/>
    <ImageView
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_17"
        android:layout_marginLeft="@dimen/dp_54"
        android:layout_marginTop="@dimen/dp_262"
        android:src="@mipmap/mima"

        />

    <EditText
        android:id="@+id/et_passage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_247"
        android:layout_marginRight="@dimen/dp_48"
        android:gravity="center"
        android:hint="请输入密码" />
    <Button
        android:layout_width="@dimen/dp_311"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_330"
        android:layout_marginLeft="32dp"
        android:text="@string/bangding"
        android:background="@drawable/shop"
        />
    <TextView
        android:layout_width="@dimen/dp_229"
        android:layout_height="@dimen/dp_18"
        android:text="@string/warning"
        android:layout_marginTop="@dimen/dp_600"
        android:layout_marginLeft="@dimen/dp_73"/>

</RelativeLayout>