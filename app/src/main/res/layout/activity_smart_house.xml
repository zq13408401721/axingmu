<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".presenter.acivity.SmartHouseActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">

        <ImageView
            android:id="@+id/iv_back_smartHouse"
            android:layout_width="@dimen/dp_9"
            android:layout_height="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/fanhuhei2x" />

        <TextView
            android:layout_width="@dimen/dp_71"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/smart"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_switch"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_16"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/kai2x" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_house_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:gravity="center_vertical"
                    android:text="京西祥云15号楼1单元101"
                    android:textSize="@dimen/dp_16" />

                <ImageView
                    android:layout_width="@dimen/dp_19"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@mipmap/qiehuan2x" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_51"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_goHome"
                        android:layout_width="@dimen/dp_68"
                        android:layout_height="@dimen/dp_23"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:background="@drawable/selector_smart_house_huijia"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_16"
                        android:text="@string/gohome"
                        android:textColor="@drawable/selector_smart_house_text"/>

                    <TextView
                        android:id="@+id/tv_leaveHome"
                        android:layout_width="@dimen/dp_68"
                        android:layout_height="@dimen/dp_23"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:background="@drawable/selector_smart_house_lijia"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:textColor="@drawable/selector_smart_house_text"
                        android:paddingLeft="@dimen/dp_16"
                        android:text="@string/leavehome" />

                    <TextView
                        android:id="@+id/tv_diNuan"
                        android:layout_width="@dimen/dp_68"
                        android:layout_height="@dimen/dp_23"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:background="@drawable/selector_smart_house_dinuan"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:textColor="@drawable/selector_smart_house_text"
                        android:paddingLeft="@dimen/dp_16"
                        android:text="@string/dinuan" />

                    <TextView
                        android:id="@+id/tv_xinFeng"
                        android:layout_width="@dimen/dp_68"
                        android:layout_height="@dimen/dp_23"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:background="@drawable/selector_smart_house_xinfeng"
                        android:clickable="true"
                        android:textColor="@drawable/selector_smart_house_text"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_16"
                        android:text="@string/xinfeng" />
                </LinearLayout>
            </HorizontalScrollView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_198"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dp_15"
                app:cardElevation="@dimen/dp_1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_91">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@mipmap/beijing2x" />

                        <ImageView
                            android:layout_width="@dimen/dp_140"
                            android:layout_height="@dimen/dp_36"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_15"
                            android:src="@mipmap/kongqizhilaing2x" />

                        <TextView
                            android:layout_width="@dimen/dp_45"
                            android:layout_height="@dimen/dp_20"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_15"
                            android:background="@drawable/shape_smart_house"
                            android:gravity="center"
                            android:text="优"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_13" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_40"
                            android:layout_alignParentBottom="true">

                            <TextView
                                android:layout_width="85dp"
                                android:layout_height="12dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dp_18"
                                android:text="pm2.5  0~35/m³"
                                android:textColor="#ffffffff"
                                android:textSize="11sp" />

                            <TextView
                                android:layout_width="78dp"
                                android:layout_height="12dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/dp_31"
                                android:text="co2  38mmHG"
                                android:textColor="#ffffffff"
                                android:textSize="11sp" />

                            <TextView
                                android:layout_width="86dp"
                                android:layout_height="12dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dp_30"
                                android:layout_marginRight="@dimen/dp_18"
                                android:text="甲醛  0.08mg/m³"
                                android:textColor="#ffffffff"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <android.support.design.widget.TabLayout
                        android:id="@+id/tab_smart"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_66"
                        android:layout_marginTop="@dimen/dp_19"
                        app:tabMode="scrollable">

                    </android.support.design.widget.TabLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_18"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="@string/kongtiao"
                    android:textColor="#ff333333"
                    android:textSize="16sp" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/sc_gold"
                    android:layout_width="@dimen/dp_46"
                    android:layout_height="@dimen/dp_26"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/selector_smart_house_switch"
                    android:theme="@style/scstyle"
                    app:showText="false"
                    app:splitTrack="false"
                    app:thumbTint="#00000000"
                    app:trackTint="#00000000" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_186"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_wendu"
                    android:layout_width="@dimen/dp_164"
                    android:layout_height="@dimen/dp_164"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/wenduquan2x" />

                    <TextView
                        android:id="@+id/tv_temp_kongtiao"
                        android:layout_width="64dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="@dimen/dp_58"
                        android:layout_marginTop="@dimen/dp_52"
                        android:text="25°"
                        android:textColor="#ff00837b"
                        android:textSize="35sp" />

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="19dp"
                        android:layout_marginLeft="@dimen/dp_70"
                        android:layout_marginTop="@dimen/dp_113"
                        android:text="30°"
                        android:textColor="#ff999999"
                        android:textSize="18sp" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_jia"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_toRightOf="@id/rl_wendu"
                    android:src="@mipmap/jia2x" />

                <ImageView
                    android:id="@+id/iv_jian"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_3"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_30"
                    android:layout_toLeftOf="@id/rl_wendu"
                    android:src="@mipmap/jian2x" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_375"
                android:layout_height="@dimen/dp_132"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_66"
                    android:orientation="horizontal">

                    <android.support.v4.widget.Space
                        android:layout_width="@dimen/dp_45"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:src="@drawable/selector_smart_house_chushi" />

                        <TextView
                            android:layout_width="22dp"
                            android:layout_height="13dp"
                            android:text="@string/chushi"
                            android:textColor="@drawable/selector_smart_house_text"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <android.support.v4.widget.Space
                        android:layout_width="@dimen/dp_45"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:src="@drawable/selector_smart_house_tongfeng" />

                        <TextView
                            android:layout_width="22dp"
                            android:layout_height="13dp"
                            android:text="@string/tongfeng"
                            android:textColor="@drawable/selector_smart_house_text"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <android.support.v4.widget.Space
                        android:layout_width="@dimen/dp_45"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:src="@drawable/selector_smart_house_zhileng" />

                        <TextView
                            android:layout_width="22dp"
                            android:layout_height="13dp"
                            android:text="@string/zhileng"
                            android:textColor="@drawable/selector_smart_house_text"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <android.support.v4.widget.Space
                        android:layout_width="@dimen/dp_45"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:src="@drawable/selector_smart_house_zhire" />

                        <TextView
                            android:layout_width="22dp"
                            android:layout_height="13dp"
                            android:text="@string/zhire"
                            android:textColor="@drawable/selector_smart_house_text"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <android.support.v4.widget.Space
                        android:layout_width="@dimen/dp_45"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:src="@drawable/selector_smart_house_zidong" />

                        <TextView
                            android:layout_width="22dp"
                            android:layout_height="13dp"
                            android:text="@string/zidong"
                            android:textColor="@drawable/selector_smart_house_text"
                            android:textSize="11sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_66"
                    android:orientation="horizontal">

                    <android.support.v4.widget.Space
                        android:layout_width="@dimen/dp_45"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:src="@drawable/selector_smart_house_gaosu" />

                        <TextView
                            android:layout_width="22dp"
                            android:layout_height="13dp"
                            android:text="@string/gaosu"
                            android:textColor="@drawable/selector_smart_house_text"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <android.support.v4.widget.Space
                        android:layout_width="@dimen/dp_45"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:src="@drawable/selector_smart_house_zhongsu" />

                        <TextView
                            android:layout_width="22dp"
                            android:layout_height="13dp"
                            android:text="@string/zhongsu"
                            android:textColor="@drawable/selector_smart_house_text"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <android.support.v4.widget.Space
                        android:layout_width="@dimen/dp_45"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:src="@drawable/selector_smart_house_disu" />

                        <TextView
                            android:layout_width="22dp"
                            android:layout_height="13dp"
                            android:text="@string/disu"
                            android:textColor="@drawable/selector_smart_house_text"
                            android:textSize="11sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/layout_divide_horizontal" />

            <LinearLayout
                android:layout_width="@dimen/dp_375"
                android:layout_height="@dimen/dp_163"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dp_105"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@drawable/selector_smart_house_decorate"
                        android:drawableLeft="@mipmap/zhudeng2x"
                        android:drawablePadding="@dimen/dp_6"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_15"
                        android:text="@string/zhudeng"
                        android:textSize="@dimen/dp_12" />

                    <TextView
                        android:layout_width="@dimen/dp_105"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@drawable/selector_smart_house_decorate"
                        android:drawableLeft="@mipmap/shedeng2x"
                        android:drawablePadding="@dimen/dp_6"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_15"
                        android:text="@string/shedeng"
                        android:textSize="@dimen/dp_12" />

                    <TextView
                        android:layout_width="@dimen/dp_105"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@drawable/selector_smart_house_decorate"
                        android:drawableLeft="@mipmap/dengdai2x"
                        android:drawablePadding="@dimen/dp_6"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_15"
                        android:text="@string/dengdai"
                        android:textSize="@dimen/dp_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dp_105"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@drawable/selector_smart_house_decorate"
                        android:drawableLeft="@mipmap/bulian2x"
                        android:drawablePadding="@dimen/dp_6"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_15"
                        android:text="@string/bulian"
                        android:textSize="@dimen/dp_12" />

                    <TextView
                        android:layout_width="@dimen/dp_105"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@drawable/selector_smart_house_decorate"
                        android:drawableLeft="@mipmap/shalian2x"
                        android:drawablePadding="@dimen/dp_6"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_15"
                        android:text="@string/shalian"
                        android:textSize="@dimen/dp_12" />

                    <TextView
                        android:layout_width="@dimen/dp_105"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@drawable/selector_smart_house_decorate"
                        android:drawableLeft="@mipmap/qingjing2x"
                        android:drawablePadding="@dimen/dp_6"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_15"
                        android:text="@string/qingjing"
                        android:textSize="@dimen/dp_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dp_105"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@drawable/selector_smart_house_decorate"
                        android:drawableLeft="@mipmap/shushi2x"
                        android:drawablePadding="@dimen/dp_6"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_15"
                        android:text="@string/shushi"
                        android:textSize="@dimen/dp_12" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>