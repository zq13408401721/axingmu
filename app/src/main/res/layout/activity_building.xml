<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hous.BuildingActivity">

    <ImageView
        android:id="@+id/iv_build_back"
        android:layout_width="@dimen/dp_13"
        android:layout_height="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:src="@mipmap/fanhuhei"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="@dimen/dp_71"
        android:layout_height="@dimen/dp_19"
        android:layout_marginTop="@dimen/dp_18"
        android:text="@string/buildingselection"
        android:textColor="#ff333333"
        android:textSize="@dimen/sp_17"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_build_back"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="@dimen/dp_130"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_79"
        android:text="@string/buildtxt"
        android:textColor="#ff999999"
        android:textSize="@dimen/dp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_huild"
        android:layout_marginTop="@dimen/dp_29"
        app:layout_constraintTop_toBottomOf="@+id/tv_1"
        android:layout_width="match_parent"
        android:layout_height="529dp"/>

</android.support.constraint.ConstraintLayout>