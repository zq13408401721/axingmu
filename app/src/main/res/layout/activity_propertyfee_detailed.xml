<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        layout="@layout/layout_propertyfee_title_style"/>
    <LinearLayout
        android:id="@+id/jilu_big"
        android:layout_margin="@dimen/dp_15"
        android:background="@mipmap/jilukaung1"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_detailed_bill"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="@dimen/dp_116"
            android:layout_height="@dimen/dp_18"
            android:text="19年物业费账单"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_16"
            />
        <TextView
            android:id="@+id/tv_detailed_status"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_16"
            android:text="未结清"
            android:textColor="#ff999999"
            android:textSize="@dimen/sp_14"
            />
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="@dimen/dp_15"
            android:id="@+id/recyc_detailed"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/myId"
        android:visibility="visible"
        android:background="@mipmap/jilukuang2"
        android:layout_margin="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jilu_big"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_101">
        <TextView
            android:id="@+id/chinajin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_18"
            android:text="滞纳金"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginLeft="@dimen/dp_16"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_16"
            />

        <TextView
            android:id="@+id/chinajin_price"
            android:layout_width="@dimen/dp_33"
            android:layout_height="@dimen/dp_17"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_16"
            android:text="0.00"
            android:textColor="#ff333333"
            android:textSize="16sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_37"
            app:layout_constraintTop_toBottomOf="@+id/chinajin"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="@dimen/dp_121"
            android:layout_height="@dimen/dp_15"
            android:text="如需发票，请联系物业"
            android:textColor="#ff999999"
            android:textSize="@dimen/sp_12"
            />
        <TextView
            android:id="@+id/propertyfee_total"
            android:layout_marginTop="@dimen/dp_37"
            android:layout_marginRight="@dimen/dp_16"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chinajin_price"
            android:layout_width="@dimen/dp_99"
            android:layout_height="@dimen/dp_18"
            android:text="总计：500.00"
            android:textColor="#ff0c8b84"
            android:textSize="@dimen/sp_16"
            />

    </android.support.constraint.ConstraintLayout>
    <Button

           app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_width="@dimen/dp_311"
        android:layout_height="@dimen/dp_40"
        android:text="立即缴费"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_410"
        android:layout_marginLeft="@dimen/dp_32"
        android:background="@drawable/shop"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/finish"
        android:visibility="invisible"
        android:background="@mipmap/jilukuang2"
        android:layout_margin="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jilu_big"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_354">
        <TextView
            android:id="@+id/title"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_marginLeft="@dimen/dp_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="@dimen/dp_145"
            android:layout_height="@dimen/dp_19"
            android:text="19年物业费账单明细"
            android:textColor="#ff333333"
            android:textSize="16sp"
            />
        <android.support.v7.widget.RecyclerView
            android:layout_marginLeft="@dimen/dp_14"

            android:layout_marginTop="@dimen/dp_35"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            android:id="@+id/recyc_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"



            ></android.support.v7.widget.RecyclerView>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
