<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_246"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:paddingTop="@dimen/dp_15"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_231"
        app:cardCornerRadius="@dimen/dp_5"
        app:cardElevation="@dimen/dp_5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_activity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_147"
                android:scaleType="fitXY"
                android:src="@mipmap/banner1"/>
            <TextView
                android:id="@+id/tv_activity_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="享受新时代"
                android:textSize="@dimen/dp_15"/>
            <TextView
                android:id="@+id/tv_activity_remark"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="请大家踊跃参加，晒出您的拿手菜！"
                android:textSize="@dimen/dp_14"/>
            <TextView
                android:id="@+id/tv_activity_apply_time"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="2019-09-13 00:00:00"
                android:textSize="@dimen/dp_13"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
