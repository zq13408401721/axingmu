<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Home_Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView

                    android:id="@+id/weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/tianqi" />

                <ImageView
                    android:layout_width="@dimen/dp_119"
                    android:layout_height="@dimen/dp_18"
                    android:layout_marginLeft="128dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:src="@mipmap/logo" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@mipmap/xiaoxi" />
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_138"
            android:layout_below="@+id/tb"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_15" />
        <LinearLayout
            android:id="@+id/ll_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_246"
            android:orientation="horizontal"
            >
            <ImageView

                android:layout_width="@dimen/dp_22"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_height="@dimen/dp_22"
                android:src="@mipmap/menjinyaoshi"/>
            <ImageView
                android:layout_width="@dimen/dp_23"
                android:layout_height="@dimen/dp_22"
                android:layout_marginLeft="@dimen/dp_50"
                android:src="@mipmap/lianxiwuy"/>
            <ImageView

                android:layout_width="@dimen/dp_23"
                android:layout_height="@dimen/dp_22"
                android:layout_marginLeft="@dimen/dp_50"
                android:src="@mipmap/jiaofei"/>
            <ImageView

                android:layout_width="@dimen/dp_23"
                android:layout_height="@dimen/dp_22"
                android:layout_marginLeft="@dimen/dp_50"
                android:src="@mipmap/baoxiu"/>
            <ImageView
                android:layout_width="23dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_height="@dimen/dp_22"
                android:src="@mipmap/aaaa"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_text"
            android:layout_below="@id/ll_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_11"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/entrance"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_18"
                android:textSize="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_11"
                android:layout_marginLeft="@dimen/dp_20"
                android:gravity="center"
                android:text="@string/entrance" />

            <TextView
                android:id="@+id/managment"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_11"
                android:textSize="@dimen/dp_10"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_27"
                android:layout_marginTop="@dimen/dp_11"
                android:text="@string/property" />

            <TextView
                android:id="@+id/cost"
                android:layout_width="44dp"
                android:textSize="@dimen/dp_10"
                android:layout_height="@dimen/dp_11"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_11"
                android:gravity="center"
                android:text="@string/cost" />

            <TextView
                android:id="@+id/warranty"
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_11"
                android:textSize="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_11"
                android:layout_marginLeft="@dimen/dp_32"
                android:gravity="center"
                android:text="@string/warranty" />

            <TextView

                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_13"
                android:textSize="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_11"
                android:gravity="center"
                android:text="新增访客" />
        </LinearLayout>


        <ImageView
            android:id="@+id/tongzhi"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_14"
            android:layout_below="@id/ll_text"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_30"
            android:src="@mipmap/tongzhi" />


        <TextView
            android:id="@+id/latest"
            android:layout_width="@dimen/dp_66"
            android:layout_height="@dimen/dp_22"
            android:layout_below="@+id/tongzhi"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_270"
            android:text="最新活动"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_16" />

        <RelativeLayout
            android:id="@+id/ll_title"
            android:layout_width="@dimen/dp_345"
            android:layout_height="@dimen/dp_234"
            android:layout_below="@+id/latest"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_35"
          >

            <ImageView
                android:id="@+id/iv_tu"
                android:layout_width="@dimen/dp_345"
                android:layout_height="@dimen/dp_147"
                android:layout_marginRight="15dp"
                android:src="@mipmap/banner1" />

            <TextView
                android:id="@+id/tv_titl"
                android:layout_width="@dimen/dp_159"
                android:layout_height="@dimen/dp_19"
                android:layout_below="@+id/iv_tu"
                android:layout_marginTop="@dimen/dp_11"
                android:text="@string/experience" />

            <TextView
                android:id="@+id/titl1"
                android:layout_width="@dimen/dp_194"
                android:layout_height="@dimen/dp_19"
                android:layout_below="@+id/tv_titl"
                android:layout_marginTop="@dimen/dp_6"
                android:text="@string/title1" />

            <TextView
                android:layout_width="@dimen/dp_164"
                android:layout_height="@dimen/dp_19"
                android:layout_below="@+id/titl1"
                android:layout_marginTop="@dimen/dp_6"
                android:text="截止时间：2019年8月31日" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/dp_345"
            android:layout_height="@dimen/dp_234"
            android:layout_below="@+id/ll_title"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tu1"
                android:layout_width="@dimen/dp_345"
                android:layout_height="@dimen/dp_147"
                android:src="@mipmap/banner2" />

            <TextView
                android:id="@+id/title1"
                android:layout_width="@dimen/dp_79"
                android:layout_height="@dimen/dp_19"
                android:layout_marginTop="9dp"
                android:layout_below="@id/iv_tu1"
                android:text="享受新时代" />

            <TextView
                android:id="@+id/title2"
                android:layout_width="@dimen/dp_207"
                android:layout_height="@dimen/dp_19"
                android:layout_marginTop="9dp"
                android:layout_below="@+id/title1"
                android:text="请大家踊跃参与，晒出大家的拿手菜" />

            <TextView
                android:layout_width="@dimen/dp_164"
                android:layout_height="@dimen/dp_19"
                android:layout_marginTop="9dp"
                android:layout_below="@+id/title2"
                android:text="截止时间：2019年8月31日" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>