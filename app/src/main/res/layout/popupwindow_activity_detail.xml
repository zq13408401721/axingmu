<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="@dimen/dp_285"
        android:layout_height="@dimen/dp_320">


        <FrameLayout
            android:layout_width="@dimen/dp_270"
            android:layout_height="@dimen/dp_305"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/tankuang">

            <TextView
                android:layout_width="@dimen/dp_66"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_104"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_105"
                android:text="@string/activityapply"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:layout_width="@dimen/dp_72"
                android:layout_height="@dimen/dp_79"
                android:layout_marginLeft="@dimen/dp_100"
                android:layout_marginTop="@dimen/dp_89"
                android:layout_marginRight="@dimen/dp_99"
                android:src="@mipmap/tankuang1" />

            <Button
                android:id="@+id/window_apply_btn"
                android:layout_width="@dimen/dp_180"
                android:layout_height="@dimen/dp_36"
                android:layout_marginLeft="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_227"
                android:layout_marginRight="@dimen/dp_45"
                android:background="@drawable/button_apply_selector"
                android:text="@string/okapply"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />
        </FrameLayout>

        <ImageView
            android:id="@+id/window_finish_iv"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:src="@mipmap/tankuangfinish" />
    </RelativeLayout>

</LinearLayout>
